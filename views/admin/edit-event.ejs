<%- include('../partials/header', { pageTitle: 'Edit Event', bootstrap: '../../css/bootstrap.min.css', fontAwesome: '../../css/font-awesome.css', carousal: '../../css/owl-carousel.css', tooplate: '../../css/tooplate-artxibition.css' }) %>

<div class="rent-venue-application">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="heading-text">
                    <h4>Edit Event</h4>
                </div>
                <div class="contact-form">
                    <form id="contact" action="/events/admin/edit/<%= event._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="_method" value="PUT"> <!-- Enables PUT method -->
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="title" type="text" id="title" placeholder="Title*" required value="<%= event.title %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="description" type="text" id="description" placeholder="Description*" required value="<%= event.description %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="maxAttendees" type="number" id="maxAttendees" placeholder="Max Attendees*" required value="<%= event.maxAttendees %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="eventDate" type="date" id="eventDate" required value="<%= event.eventDate.toISOString().split('T')[0] %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="eventTime" type="time" id="eventTime" required value="<%= event.eventTime %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input name="location" type="text" id="location" placeholder="Location*" required value="<%= event.location %>">
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <label>Current Image:</label>
                                    <br>
                                    <img src="<%= event.imageUrl %>" alt="Event Image" style="max-width: 150px;">
                                    <br><br>
                                    <input name="eventImage" type="file" id="eventImage">
                                    <p style="font-size: 12px;">(Leave blank to keep the current image)</p>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-dark-button">Update Event</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="../../scripts/jquery-2.1.0.min.js"></script>

<!-- Bootstrap -->
<script src="../../scripts/popper.js"></script>
<script src="../../scripts/bootstrap.min.js"></script>

<!-- Plugins -->
<script src="../../scripts/scrollreveal.min.js"></script>
<script src="../../scripts/waypoints.min.js"></script>
<script src="../../scripts/jquery.counterup.min.js"></script>
<script src="../../scripts/imgfix.min.js"></script> 
<script src="../../scripts/mixitup.js"></script> 
<script src="../../scripts/accordions.js"></script>
<script src="../../scripts/owl-carousel.js"></script>

<!-- Global Init -->
<script src="../../scripts/custom.js"></script>

</body>
</html>
