<%- include('../partials/header', { pageTitle: 'Admin Add New Event', bootstrap: '../../css/bootstrap.min.css', fontAwesome: '../../css/font-awesome.css', carousal: '../../css/owl-carousel.css', tooplate: '../../css/tooplate-artxibition.css' }) %>

    <div class="rent-venue-application">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="heading-text">
                        <h4>Add A New Event</h4>
                    </div>
                    <div class="contact-form">
                      <form id="contact" action="/admin/events/new" method="post" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="title" type="text" id="title" placeholder="Title*">
                            </fieldset>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="description" type="text" id="description" placeholder="Description*">
                            </fieldset>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="maxAttendees" type="number" id="maxAttendees" placeholder="Max Attendees*">
                            </fieldset>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="eventDate" type="datetime-local" id="eventDate" required>
                            </fieldset>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="location" type="text" id="location" placeholder="Location*" required>
                            </fieldset>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <fieldset>
                              <input name="eventImage" type="file" id="eventImage" placeholder="Event Image*" required>
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                              <button type="submit" id="form-submit" class="main-dark-button">Add Event</button>
                            </fieldset>
                          </div>
                        </div>
                      </form>
                    </div>                    
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../../scripts/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="../../scripts/popper.js"></script>
    <script src="../../scripts/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="../../scripts/scrollreveal.min.js"></script>
    <script src="../../scripts/waypoints.min.js"></script>
    <script src="../../scripts/jquery.counterup.min.js"></script>
    <script src="../../scripts/imgfix.min.js"></script> 
    <script src="../../scripts/mixitup.js"></script> 
    <script src="../../scripts/accordions.js"></script>
    <script src="../../scripts/owl-carousel.js"></script>
    
    <!-- Global Init -->
    <script src="../../scripts/custom.js"></script>

  </body>
</html>