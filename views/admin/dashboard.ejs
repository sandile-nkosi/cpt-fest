<%- include('../partials/header', { pageTitle: 'Admin Dashboard', bootstrap: '../../css/bootstrap.min.css', fontAwesome: '../../css/font-awesome.css', carousal: '../../css/owl-carousel.css', tooplate: '../../css/tooplate-artxibition.css' }) %>

    <!-- ***** About Us Page ***** -->
    <div class="page-heading-shows-events">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </div>
    </div>
    <div class="tickets-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading">
                        <h2>Admin Dashboard</h2>
                        <div class="container mt-5">
                            <h2 class="text-center">Event Statistics</h2>
                            <table class="table table-bordered mt-4">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Date</th>
                                        <th>Location</th>
                                        <th>RSVPs</th>
                                        <th>Average Rating</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% events.forEach(event => { %>
                                        <tr>
                                            <td><%= event.title %></td>
                                            <td><%= new Date(event.eventDate).toDateString() %></td>
                                            <td><%= event.location %></td>
                                            <td><%= event.rsvps.length %> / <%= event.maxAttendees %></td>
                                            <td>
                                                <% 
                                                    let avgRating = event.ratings.length > 0 ? 
                                                        (event.ratings.reduce((acc, r) => acc + r.rating, 0) / event.ratings.length).toFixed(1) 
                                                        : "No ratings yet"; 
                                                %>
                                                <%= avgRating %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="../../scripts/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="../../scripts/popper.js"></script>
    <script src="../../scripts/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="../../scripts/scrollreveal.min.js"></script>
    <script src="../../scripts/waypoints.min.js"></script>
    <script src="../../scripts/jquery.counterup.min.js"></script>
    <script src="../../scripts/imgfix.min.js"></script> 
    <script src="../../scripts/mixitup.js"></script> 
    <script src="../../scripts/accordions.js"></script>
    <script src="../../scripts/owl-carousel.js"></script>
    
    <!-- Global Init -->
    <script src="../../scripts/custom.js"></script>

  </body>
</html>