<%- include('../partials/header', { pageTitle: 'Admin Sign In', bootstrap: '../../css/bootstrap.min.css', fontAwesome: '../../css/font-awesome.css', carousal: '../../css/owl-carousel.css', tooplate: '../../css/tooplate-artxibition.css' }) %>

    <!-- ***** About Us Page ***** -->
    <div class="page-heading-shows-events">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </div>
    </div>
    <div class="tickets-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="search-box">
                        <form id="subscribe" action="" method="get">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="search-heading">
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            
                                        </div>
                                        <div class="col-lg-3">
                                            
                                        </div>
                                        <div class="col-lg-3">
                                            
                                        </div>
                                        <div class="col-lg-3">
                                            <fieldset>
                                                <a class="main-dark-button" href="/admin/events/new">Add New Event</a>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="heading">
                        <h2>All Events</h2>
                    </div>
                </div>
                <div class="col-lg-4">
                    <% for (const event of events) {%>
                    <div class="ticket-item">
                        <div class="thumb">
                            <img src="<%= event.imageUrl%>" alt="">
                        </div>
                            <div class="down-content">
                                <span>There Are <%= event.maxAttendees - event.rsvps%> Tickets Left For This Show</span>
                                <h4><%= event.title%></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i> <%= event.formattedDate + ', ' + event.eventTime %></li>
                                    <li><i class="fa fa-map-marker"></i><%= event.location%></li>
                                </ul>
                                <div class="row">
                                    <div class="main-dark-button">
                                        <a href="/admin/events/edit/<%= event._id%>">Edit Event</a>
                                    </div>
                                    <div class="main-dark-button">
                                        <form action="/admin/events/archive/<%= event._id %>" method="post">
                                            <button class="main-dark-button">Archive Event</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }%>
                </div>
                <div class="col-lg-12">
                    <div class="pagination">
                        <ul>
                            <% if (currentPage > 1) { %>
                                <li><a href="/admin/events?page=<%= currentPage - 1 %>">Prev</a></li>
                            <% } else { %>
                                <li class="disabled"><a href="#">Prev</a></li>
                            <% } %>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="<%= i === currentPage ? 'active' : '' %>">
                                    <a href="/admin/events?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            <% if (currentPage < totalPages) { %>
                                <li><a href="/admin/events?page=<%= currentPage + 1 %>">Next</a></li>
                            <% } else { %>
                                <li class="disabled"><a href="#">Next</a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>                
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../../scripts/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="../../scripts/popper.js"></script>
    <script src="../../scripts/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="../../scripts/scrollreveal.min.js"></script>
    <script src="../../scripts/waypoints.min.js"></script>
    <script src="../../scripts/jquery.counterup.min.js"></script>
    <script src="../../scripts/imgfix.min.js"></script> 
    <script src="../../scripts/mixitup.js"></script> 
    <script src="../../scripts/accordions.js"></script>
    <script src="../../scripts/owl-carousel.js"></script>
    
    <!-- Global Init -->
    <script src="../../scripts/custom.js"></script>

  </body>
</html>