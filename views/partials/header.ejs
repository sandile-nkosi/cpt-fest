    <body>
    
<!-- ***** Preloader Start ***** -->
<div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<!-- ***** Preloader End ***** -->

<!-- ***** Pre Header ***** -->
<div class="pre-header bg-light py-2">
    <div class="container">
        <div class="row align-items-center">
            <!-- Empty Column -->
            <div class="col-lg-6 col-sm-6"></div>

            <!-- Admin/User Sign In/Sign Out Section -->
            <% if (!user) { %>
                <div class="col-lg-6 col-sm-6 text-end">
                    <div class="text-button">
                        <% if (admin) { %>
                            <!-- Admin Sign Out Button -->
                            <form action="/auth/admin/signout" method="POST" class="d-inline">
                                <button class="btn btn-dark btn-sm" style="color: white;">
                                    Admin Sign Out <i class="fa fa-arrow-right ms-1"></i>
                                </button>
                            </form>
                        <% } else { %>
                            <!-- Admin Sign In Link -->
                            <a href="/auth/admin/signin" class="btn btn-dark btn-sm" style="color: white;">
                                Admin Sign In <i class="fa fa-arrow-right ms-1"></i>
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } else if (user) { %>
                <div class="col-lg-6 col-sm-6 text-end">
                    <div class="text-button">
                        <!-- User Sign Out Button -->
                        <form action="/auth/user/signout" method="POST" class="d-inline">
                            <button class="btn btn-dark btn-sm">
                                Sign Out <i class="fa fa-arrow-right ms-1"></i>
                            </button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo text-secondary text-decoration-none fs-3 fw-bold">
                        ONE <em class="fw-normal">Festival</em>
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <% if (admin) { %>
                            <li><a href="/admin/dashboard" class="<%= (currentPath === '/admin/dashboard') ? 'active' : '' %>">Dashboard</a></li>
                            <li><a href="/admin/events/all" class="<%= (currentPath === '/admin/events/all') ? 'active' : '' %>">Events</a></li>
                            <li><a href="/admin/events/new" class="<%= (currentPath === '/admin/events/new') ? 'active' : '' %>">Add New Event</a></li>
                        <% } else if (user) { %>
                            <li><a href="/" class="<%= (currentPath === '/') ? 'active' : '' %>">Home</a></li>
                            <li><a href="/user/events" class="<%= (currentPath === '/user/events') ? 'active' : '' %>">All Events</a></li>
                            <li><a href="/user/events/own" class="<%= (currentPath === '/user/events/own') ? 'active' : '' %>">My Events</a></li>
                        <% } else { %>
                            <li><a href="/" class="<%= (currentPath === '/') ? 'active' : '' %>">Home</a></li>
                            <li><a href="/user/events" class="<%= (currentPath === '/user/events') ? 'active' : '' %>">Shows & Events</a></li>
                            <li><a href="/auth/signin" class="<%= (currentPath === '/auth/signin') ? 'active' : '' %>">Sign In</a></li>
                            <li><a href="/auth/signup" class="<%= (currentPath === '/auth/signup') ? 'active' : '' %>">Sign Up</a></li>
                        <% } %>
                    </ul>                                                        
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ***** Header Area End ***** -->
