<%- include('../partials/header', { pageTitle: 'One City Events', styles: '../css/styles.css', event: '../css/event.css'}) %>

<!-- ***** About Us Page ***** -->
<div class="page-heading-rent-venue">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Do you want to attend one or more of our events?</h2>
                <span>Sign up below and get started!</span>
            </div>
        </div>
    </div>
</div>

<!-- ***** Rent Venue Application Form ***** -->
<div class="rent-venue-application d-flex justify-content-center align-items-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <!-- Heading -->
                <div class="heading-text text-center mb-4">
                    <h4>New Users</h4>
                </div>

                <!-- Error Message -->
                <% if (sessionData.errorMessage) { %>
                    <div class="alert alert-danger text-center mb-4">
                        <%= sessionData.errorMessage %>
                    </div>
                <% } %>

                <!-- Contact Form -->
                <div class="contact-form bg-white p-4 rounded shadow-sm">
                    <form id="contact" action="/auth/signup" method="post">
                        <div class="row g-3">
                            <!-- Full Name -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="fullName" type="text" id="fullName" class="form-control" placeholder="Full Name*" required value="<%=sessionData.fullName%>">
                                    <label for="fullName">Full Name*</label>
                                </div>
                            </div>
                            <!-- Display Name -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="displayName" type="text" id="displayName" class="form-control" placeholder="Display Name*" required value="<%=sessionData.displayName%>">
                                    <label for="displayName">Display Name*</label>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="email" type="email" id="email" class="form-control" placeholder="Your Email*" required>
                                    <label for="email">Your Email*</label>
                                </div>
                            </div>

                            <!-- Age -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <select name="age" id="age" class="form-control" required>
                                        <option value="">Select Age Range*</option>
                                        <option value="Under 18" <%= sessionData.age === 'Under 18' ? 'selected' : '' %>>Under 18</option>
                                        <option value="18-24" <%= sessionData.age === '18-24' ? 'selected' : '' %>>18-24</option>
                                        <option value="25-34" <%= sessionData.age === '25-34' ? 'selected' : '' %>>25-34</option>
                                        <option value="35-44" <%= sessionData.age === '35-44' ? 'selected' : '' %>>35-44</option>
                                        <option value="45-54" <%= sessionData.age === '45-54' ? 'selected' : '' %>>45-54</option>
                                        <option value="55-64" <%= sessionData.age === '55-64' ? 'selected' : '' %>>55-64</option>
                                        <option value="65+" <%= sessionData.age === '65+' ? 'selected' : '' %>>65+</option>
                                        <option value="Prefer not to say" <%= sessionData.age === 'Prefer not to say' ? 'selected' : '' %>>Prefer not to say</option>
                                    </select>
                                    <label for="age">Age Range*</label>
                                </div>
                            </div>

                            <!-- Gender -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <select name="gender" id="gender" class="form-control" required>
                                        <option value="">Select Gender*</option>
                                        <option value="Female" <%= sessionData.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                        <option value="Male" <%= sessionData.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                        <option value="Non-binary" <%= sessionData.gender === 'Non-binary' ? 'selected' : '' %>>Non-binary</option>
                                        <option value="Other" <%= sessionData.gender === 'Other' ? 'selected' : '' %>>Other</option>
                                        <option value="Prefer not to say" <%= sessionData.gender === 'Prefer not to say' ? 'selected' : '' %>>Prefer not to say</option>
                                    </select>
                                    <label for="gender">Gender*</label>
                                </div>
                            </div>

                            <!-- Province -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <select name="province" id="province" class="form-control" required>
                                        <option value="">Select Province*</option>
                                        <option value="Eastern Cape" <%= sessionData.province === 'Eastern Cape' ? 'selected' : '' %>>Eastern Cape</option>
                                        <option value="Free State" <%= sessionData.province === 'Free State' ? 'selected' : '' %>>Free State</option>
                                        <option value="Gauteng" <%= sessionData.province === 'Gauteng' ? 'selected' : '' %>>Gauteng</option>
                                        <option value="KwaZulu-Natal" <%= sessionData.province === 'KwaZulu-Natal' ? 'selected' : '' %>>KwaZulu-Natal</option>
                                        <option value="Limpopo" <%= sessionData.province === 'Limpopo' ? 'selected' : '' %>>Limpopo</option>
                                        <option value="Mpumalanga" <%= sessionData.province === 'Mpumalanga' ? 'selected' : '' %>>Mpumalanga</option>
                                        <option value="North West" <%= sessionData.province === 'North West' ? 'selected' : '' %>>North West</option>
                                        <option value="Northern Cape" <%= sessionData.province === 'Northern Cape' ? 'selected' : '' %>>Northern Cape</option>
                                        <option value="Western Cape" <%= sessionData.province === 'Western Cape' ? 'selected' : '' %>>Western Cape</option>
                                    </select>
                                    <label for="province">Province*</label>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="password" type="password" id="password" class="form-control" placeholder="Password*" required>
                                    <label for="password">Password*</label>
                                </div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="passwordConfirm" type="password" id="passwordConfirm" class="form-control" placeholder="Confirm Password*" required>
                                    <label for="passwordConfirm">Confirm Password*</label>
                                </div>
                            </div>

                            <!-- Sign Up Button -->
                            <div class="col-12">
                                <button type="submit" id="form-submit" class="btn btn-dark w-100">Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>