<%- include('partials/header', { pageTitle: 'One City Events', styles: '../css/styles.css', event: '../css/event.css'}) %>

<!-- Body Content -->
<main class="main-content">
    <!-- Main Banner -->
    <div class="main-banner">
        <div class="container">
            <div class="main-content text-center text-white py-5">
                <h3>Trending Event</h3>
                <% singleEvents.forEach(singleEvent => { %>
                    <h4><%= singleEvent.title %></h4>
                    <a class="event-button btn btn-primary mt-3" href="/user/events/<%= singleEvent._id %>">Check it out</a>
                <% }) %> 
            </div>
        </div>
    </div>

    <!-- *** Event Carousel *** -->
    <div class="show-events-carousel">
        <div class="container">
            <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel">
                <!-- Carousel Indicators -->
                <div class="carousel-indicators">
                    <% events.forEach((event, index) => { %>
                        <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" aria-label="Slide <%= index + 1 %>"></button>
                    <% }); %>
                </div>

                <!-- Carousel Items -->
                <div class="carousel-inner">
                    <% events.forEach((event, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <a href="/user/events/<%= event._id %>">
                                <img src="<%= event.imageUrl %>" class="d-block w-100" alt="<%= event.title %>">
                            </a>
                        </div>
                    <% }); %>
                </div>

                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>


    <!-- *** Coming Events *** -->
    <div class="coming-events">
        <div class="container">
            <h3 id="hot-events">Check out hot events in Cape Town below!</h3>
            <div class="events-grid">
                <% limitedEvents.forEach(limitedEvent => { %>
                    <div class="event-card">
                        <a href="/user/events/<%= limitedEvent._id %>">
                            <img src="<%= limitedEvent.imageUrl %>" alt="<%= limitedEvent.title %>">
                            <h4><%= limitedEvent.title %></h4>
                        </a>
                        <p><i class="fa fa-clock-o"></i> <%= limitedEvent.eventDateTime %></p>
                        <p><i class="fa fa-map-marker"></i> <%= limitedEvent.location %></p>
                    </div>
                <% }); %>
            </div>
            <div class="discover-more">
                <a class="event-button" href="/user/events">Discover More</a>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('partials/footer') %>